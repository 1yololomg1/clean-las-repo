---
const { title = 'TraceSeis', description = 'Geoscience solutions through Services, Consulting and Software' } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://i0.wp.com" crossorigin>
    <style>
      :root {
        --bg: #0B1F2E;
        --fg: #e6eef3;
        --muted: #9fb3c1;
        --card: #102a3d;
        --accent: #1FB6C9;
        --link: #1FB6C9;
        --border: #1c3a50;
        --white: #ffffff;
      }
      * { box-sizing: border-box; }
      body { margin: 0; font-family: system-ui, -apple-system, Segoe UI, Roboto, Inter, Helvetica, Arial, sans-serif; color: var(--fg); background: linear-gradient(180deg, #071521 0%, #0B1F2E 100%); }
      a { color: var(--link); text-decoration: none; }
      a:hover { text-decoration: underline; }
      .wrap { max-width: 1120px; margin: 0 auto; padding: 0 20px; }
      header { position: sticky; top: 0; backdrop-filter: blur(6px); background: rgba(7,21,33,0.7); border-bottom: 1px solid var(--border); z-index: 10; }
      .nav { display: flex; align-items: center; justify-content: space-between; padding: 14px 0; }
      .brand { display: flex; align-items: center; gap: 12px; }
      .brand img { height: 28px; width: auto; }
      .brand span { font-weight: 600; letter-spacing: 0.2px; color: var(--fg); }
      .links { display: flex; gap: 18px; flex-wrap: wrap; }
      .hero { padding: 72px 0 48px; border-bottom: 1px solid var(--border); }
      h1 { font-size: 40px; line-height: 1.1; margin: 0 0 12px; }
      .sub { color: var(--muted); font-size: 18px; max-width: 820px; }
      .cta { display: flex; gap: 12px; margin-top: 22px; flex-wrap: wrap; }
      .btn { display: inline-block; padding: 12px 16px; border-radius: 8px; font-weight: 600; border: 1px solid var(--accent); }
      .btn.primary { background: var(--accent); color: #06242c; }
      .section { padding: 56px 0; border-bottom: 1px solid var(--border); }
      .grid { display: grid; gap: 16px; grid-template-columns: repeat(12, 1fr); }
      .card { grid-column: span 6; background: var(--card); border: 1px solid var(--border); border-radius: 12px; padding: 16px; }
      @media (max-width: 860px) { .card { grid-column: 1 / -1; } }
      h2 { font-size: 28px; margin: 0 0 16px; }
      h3 { margin: 0 0 6px; font-size: 18px; }
      p { margin: 0 0 10px; color: var(--fg); }
      ul { margin: 0 0 10px 18px; color: var(--fg); }
      .muted { color: var(--muted); }
      .partners-list, .contact-list { display: grid; gap: 12px; }
      .partners-list { grid-template-columns: repeat(2, minmax(0, 1fr)); }
      @media (max-width: 600px) { .partners-list { grid-template-columns: 1fr; } }
      footer { padding: 28px 0; color: var(--muted); }
      .toplink { position: fixed; right: 16px; bottom: 16px; background: var(--card); border: 1px solid var(--border); padding: 8px 12px; border-radius: 999px; }
    </style>
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "TraceSeis",
      "url": "https://www.traceseis.com/",
      "logo": "https://i0.wp.com/www.traceseis.com/wp-content/uploads/2017/04/TRACESEIS-INC-02-e1493737554657.png?fit=300%2C172&ssl=1",
      "sameAs": [
        "https://www.linkedin.com/company/24986283/",
        "https://www.linkedin.com/company/traceseis-inc"
      ]
    }
    </script>
  </head>
  <body>
    <header>
      <div class="wrap nav">
        <div class="brand">
          <img alt="TraceSeis logo" src="https://i0.wp.com/www.traceseis.com/wp-content/uploads/2017/04/TRACESEIS-INC-02-e1493737554657.png?fit=300%2C172&ssl=1" />
          <span>TraceSeis</span>
        </div>
        <nav class="links" aria-label="Primary">
          <a href="/">Home</a>
          <a href="/services">Services</a>
          <a href="/software">Software</a>
          <a href="/partners">Partners</a>
          <a href="/resources">Resources</a>
          <a href="/about">About</a>
          <a class="btn" href="/contact">Contact</a>
        </nav>
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer class="wrap">
      <p class="muted">Â© TraceSeis. Preview site for review only.</p>
    </footer>
  </body>
</html>
